<Window x:Class="SysMax2._1.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SysMax2._1"
        mc:Ignorable="d"
        Title="SysMax Loading..." Height="350" Width="600"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Border Background="#FF1E1E1E" CornerRadius="10" BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Placeholder for Logo -->
            <Viewbox Grid.Row="0" MaxHeight="150" MaxWidth="150" Margin="20">
                <!-- TODO: Replace TextBlock below with actual logo -->
                <!-- <Image Source="/Assets/Logo.png" Stretch="Uniform" /> -->
                <TextBlock Text="LOGO" Foreground="{StaticResource PrimaryColor}" FontSize="48" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Viewbox>

            <!-- Loading Text -->
            <TextBlock x:Name="LoadingText" Grid.Row="1" Text="Initializing..." 
                       Foreground="{StaticResource MutedTextColor}" FontSize="16" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,20"/>
            
            <!-- Optional Progress Bar -->
            <!-- <ProgressBar Grid.Row="2" IsIndeterminate="True" Height="5" Margin="50,0" VerticalAlignment="Center" Style="{StaticResource ThemedProgressBarStyle}"/> -->

        </Grid>
    </Border>
</Window> 