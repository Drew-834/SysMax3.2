<UserControl x:Class="SysMax2._1.Controls.SystemMetricsDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SysMax2._1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Converter and styles -->
        <local:NumericStringConverter x:Key="NumericStringConverter" />

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="CardHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="System Health" Style="{StaticResource CardHeaderStyle}"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CPU Health Card -->
                <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}" Margin="0,0,5,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Removed duplicate CpuTemperature row -->
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="CPU" FontWeight="SemiBold" Foreground="#BBBBBB"/>
                            <Ellipse x:Name="CpuHealthIndicator" Width="10" Height="10" Fill="#2ecc71" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
                            <TextBlock x:Name="CpuUsageValue" 
                                       Text="{Binding CpuUsage, Converter={StaticResource NumericStringConverter}, ConverterParameter=OneDecimal}" 
                                       FontSize="28" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="%" FontSize="16" Foreground="White" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Memory Health Card -->
                <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}" Margin="5,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="Memory" FontWeight="SemiBold" Foreground="#BBBBBB"/>
                            <Ellipse x:Name="MemoryHealthIndicator" Width="10" Height="10" Fill="#2ecc71" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
                            <TextBlock x:Name="MemoryUsageValue" 
                                       Text="{Binding MemoryUsage, Converter={StaticResource NumericStringConverter}, ConverterParameter=OneDecimal}" 
                                       FontSize="28" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="%" FontSize="16" Foreground="White" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                        </StackPanel>

                        <TextBlock x:Name="MemoryAvailable" Grid.Row="2" Text="{Binding AvailableMemoryDisplay}" Foreground="#AAAAAA" FontSize="12"/>
                    </Grid>
                </Border>

                <!-- Disk Health Card -->
                <Border Grid.Column="2" Style="{StaticResource MetricCardStyle}" Margin="5,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="Storage" FontWeight="SemiBold" Foreground="#BBBBBB"/>
                            <Ellipse x:Name="DiskHealthIndicator" Width="10" Height="10" Fill="#f39c12" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
                            <TextBlock x:Name="DiskUsageValue" 
                                       Text="{Binding DiskUsage, Converter={StaticResource NumericStringConverter}, ConverterParameter=OneDecimal}" 
                                       FontSize="28" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="%" FontSize="16" Foreground="White" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                        </StackPanel>

                        <TextBlock x:Name="DiskAvailable" Grid.Row="2" Text="{Binding AvailableDiskSpaceDisplay}" Foreground="#AAAAAA" FontSize="12"/>
                    </Grid>
                </Border>

                <!-- Network Health Card -->
                <Border Grid.Column="3" Style="{StaticResource MetricCardStyle}" Margin="5,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Removed duplicate NetworkStatus row -->
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="Network" FontWeight="SemiBold" Foreground="#BBBBBB"/>
                            <Ellipse x:Name="NetworkHealthIndicator" Width="10" Height="10" Fill="#2ecc71" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,5,0,5">
                            <TextBlock x:Name="NetworkSpeedValue" 
                                       Text="{Binding NetworkDisplayString}" 
                                       FontSize="18" FontWeight="Bold" Foreground="White" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
